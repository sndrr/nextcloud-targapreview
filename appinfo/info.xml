<?xml version="1.0"?>
<info xmlns:xsi= "http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="https://apps.nextcloud.com/schema/apps/info.xsd">
    <id>targapreview</id>
    <name>Targa Preview</name>
    <summary>Targa files preview</summary>
    <description><![CDATA[The purpose of this app is to show previews for ```.tga``` (Targa) files.]]></description>
    <version>0.0.1</version>
    <licence>agpl</licence>
    <author mail="s.ruitenbeek@getgoing.nl" homepage="https://github.com/sndrr/nextcloud-targa-preview">Sander Ruitenbeek</author>
    <namespace>TargaPreview</namespace>
    <category>files</category>
    <category>multimedia</category>
    <bugs>https://github.com/sndrr/nextcloud-targa-preview/issues</bugs>
    <dependencies>
        <nextcloud min-version="17" max-version="18"/>
    </dependencies>
    <repair-steps>
        <install>
            <step>OCA\Targapreview\Migration\RegisterMimeType</step>
        </install>
        <post-migrate>
            <step>OCA\Targapreview\Migration\RegisterMimeType</step>
        </post-migrate>
        <uninstall>
            <step>OCA\Targapreview\Migration\UnregisterMimeType</step>
        </uninstall>
    </repair-steps>
    <navigations>
        <navigation>
            <name>Targa Preview</name>
            <route>targapreview.page.index</route>
        </navigation>
    </navigations>
</info>
